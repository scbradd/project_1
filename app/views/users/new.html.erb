<h1>sign up</h1>

<% if @user.errors.any? %>
<ol>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ol>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>



  <%= f.submit "sign up!" %>
<% end %>

<nav><%= link_to 'All wines', wines_path %></nav>
 <nav><%= link_to 'new wine', new_wine_path %></nav>
